generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  password    String
  phoneNumber String

  sessions    Session[]
}

model Teacher {
  id      String    @id @default(uuid())
  name    String
  class   String

  Borrows Borrow[]
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  user      Admin    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}


model Item {
  id          String    @id @default(uuid())
  name        String
  description String?
  image       String?
  quantity    Int
  available   Int

  Borrows     Borrow[]
}

model Borrow {
  id                 String     @id @default(uuid())

  teacherId          String
  itemId             String

  teacher            Teacher   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  item               Item      @relation(fields: [itemId], references: [id], onDelete: Cascade)

  quantity           Int
  duration           DateTime
  return_date        DateTime?
  actual_return_time DateTime?
  notes              String?
  status             String
}